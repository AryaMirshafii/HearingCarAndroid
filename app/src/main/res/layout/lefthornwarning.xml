<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/skillScreen"

    >


    <ImageView
        android:id="@+id/backgroundImageViewLH"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"

        app:srcCompat="@drawable/backgroundimage" />
    <TextView
        android:id="@+id/hornLabelLeft"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:text="Horn"
        android:textSize="100dp"
        android:textColor="@color/white"
        android:fontFamily="@font/hkmediumlegacy"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        />

    <ImageView
        android:id="@+id/arrowImageLH"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        app:srcCompat="@drawable/leftarrowwhite" />





</RelativeLayout>