<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"

        app:srcCompat="@drawable/backgroundimage" />
    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:background="@drawable/verifiedwhite" />

    <TextView
        android:id="@+id/fontHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/theme1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/hkbold"
        android:text="Themes"
        android:textColor="@color/white"
        android:textSize="35dp" />


    <TextView

        android:id="@+id/theme2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/fontHeader"
        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp"
        android:fontFamily="@font/hkbold"
        android:text="Theme 2"

        android:textColor="@color/white"
        android:textSize="24dp" />

    <TextView

        android:id="@+id/theme3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/fontHeader"

        android:layout_alignParentTop="true"
        android:layout_marginTop="243dp"
        android:fontFamily="@font/hkbold"
        android:text="Theme 3"
        android:textColor="@color/white"
        android:textSize="24dp" />

    <TextView

        android:id="@+id/theme1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="99dp"
        android:fontFamily="@font/hkbold"
        android:text="Dark Mode"
        android:textColor="@color/white"
        android:textSize="24dp"

        />

    <Switch
        android:id="@+id/theme1Switch"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/theme1"
        android:layout_alignStart="@+id/theme2Switch"
        android:gravity="center"
        android:theme="@style/SwitchTheme"/>


    <Switch
        android:id="@+id/theme2Switch"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/theme3Switch"
        android:layout_alignTop="@+id/theme2"
        android:gravity="center"
        android:theme="@style/SwitchTheme"/>

    <Switch
        android:id="@+id/theme3Switch"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/theme3"
        android:layout_marginEnd="26dp"
        android:gravity="center"
        android:theme="@style/SwitchTheme"/>


</RelativeLayout>