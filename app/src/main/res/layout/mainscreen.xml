<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/skillScreen"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"

        app:srcCompat="@drawable/backgroundimage" />


    <Button
        android:id="@+id/triggerRightHornWarning"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="70dp"
        android:layout_height="50dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="200dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:text="RH"
        android:textAllCaps="false"
        android:textColor="@color/steel_blue"
        android:textSize="25dp" />


    <Button
        android:id="@+id/triggerLeftHornWarning"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"

        android:layout_marginBottom="181dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:text="LH"
        android:textAllCaps="false"
        android:textColor="@color/steel_blue"
        android:textSize="25dp" />

    <Button
        android:id="@+id/triggerLeftSirenWarning"
        android:layout_width="70dp"
        android:layout_height="50dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="119dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:text="LS"
        android:textAllCaps="false"
        android:textColor="@color/steel_blue"
        android:textSize="25dp" />

    <Button
        android:id="@+id/IncrementLeftCount"
        android:layout_width="70dp"
        android:layout_height="50dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:text="Inc L"
        android:textAllCaps="false"
        android:textColor="@color/steel_blue"
        android:textSize="20dp" />

    <Button
        android:id="@+id/triggerRightSirenWarning"
        android:layout_width="70dp"
        android:layout_height="50dp"

        android:layout_alignParentEnd="true"
        android:layout_below="@+id/triggerLeftHornWarning"
        android:layout_marginTop="-181dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:text="RS"
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.Holo"
        android:textColor="@color/steel_blue"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/bluetoothLabel"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/hkmediumlegacy"
        android:gravity="center"
        android:text="No Bluetooth Available"
        android:textColor="@color/white"
        android:textSize="30dp" />


    <ImageButton
        android:id="@+id/helpButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignParentEnd="true"
        android:background="@color/clear"
        app:srcCompat="@drawable/whitequestionmark" />

    <TextView
        android:id="@+id/mphLabel"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/hkmediumlegacy"
        android:gravity="center"
        android:text="75 MPH"
        android:textColor="@color/white"
        android:textSize="95dp" />

    <TextView
        android:id="@+id/directionLabel"
        android:layout_width="265dp"
        android:layout_height="300dp"
        android:layout_above="@+id/IncrementLeftCount"
        android:layout_toEndOf="@+id/triggerLeftHornWarning"
        android:gravity="center"
        android:text="NËš"
        android:textColor="@color/white"
        android:textSize="250dp"

        />

    <ImageButton
        android:id="@+id/settingButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/clear"
        app:srcCompat="@drawable/settings" />




</RelativeLayout>